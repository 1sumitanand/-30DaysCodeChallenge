<Window x:Class="LearnOOAD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnOOAD"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ComboBox ItemsSource="{Binding Algorithms}"  SelectionChanged="OnSelectionChanged" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="200">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Foreground="Green" Background="Black" Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        
    </Grid>
</Window>
